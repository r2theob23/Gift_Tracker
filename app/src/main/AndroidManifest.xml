<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.robertsmith.gifttracker" >

    <uses-permission android:name="android.permission.MANAGE_DOCUMENTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.AddPersonActivity"
            android:label="@string/title_activity_add_person" >
        </activity>
        <activity
            android:name=".Activities.ViewPerson"
            android:label="@string/title_activity_view_person" >
        </activity>
        <activity
            android:name=".Activities.AddGift"
            android:label="@string/title_activity_add_gift" >
        </activity>
        <activity
            android:name=".Activities.ViewGift"
            android:label="@string/title_activity_view_gift" >
        </activity>
    </application>

</manifest>
