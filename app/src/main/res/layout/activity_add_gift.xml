<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/LightSlateGray"
    tools:context="com.robertsmith.gifttracker.Activities.AddGift">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:id="@+id/giftPic" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/giftName"
        android:layout_below="@+id/giftPic"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Product Name"
        android:textColor="@color/BlanchedAlmond"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/giftPrice"
        android:layout_below="@+id/giftName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Product Price"
        android:textColor="@color/BlanchedAlmond"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/giftStore"
        android:layout_below="@+id/giftPrice"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Store or Website"
        android:textColor="@color/BlanchedAlmond"
        android:layout_marginTop="10dp" />

</RelativeLayout>
