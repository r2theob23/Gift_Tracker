<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/LightSlateGray"

    tools:context="com.robertsmith.gifttracker.Activities.ViewGift">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:id="@+id/picIV"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Name"
        android:id="@+id/nameTV"
        android:layout_below="@+id/picIV"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/BlanchedAlmond"
        android:layout_marginTop="5dp"
        android:textSize="24dp" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Price"
        android:id="@+id/priceTV"
        android:layout_below="@+id/nameTV"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/BlanchedAlmond"
        android:layout_marginTop="5dp"
        android:textSize="24dp" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Store"
        android:id="@+id/storeTV"
        android:layout_below="@+id/priceTV"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/BlanchedAlmond"
        android:layout_marginTop="5dp"
        android:textSize="24dp" />


</RelativeLayout>
